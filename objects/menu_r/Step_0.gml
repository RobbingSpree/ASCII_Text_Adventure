if animate != 0 {
	//slide in
	x-=slide_spd*animate;
	
	if animate == 1
	if ((x-1) <= 0) {
		animate = 0;
	}
	
	if animate == -1
	if (x > room_width) {
		animate = 0;
		game_manager.menu_open = menus.none;
	}
}

if animate == 0 && game_manager.menu_open == menus.right {
	if keyboard_check(vk_space)
		alarm[0] = 20;
}